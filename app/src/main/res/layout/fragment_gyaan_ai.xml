<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="always"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:clickable="false"
            android:focusable="false">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:text="ðŸ“š GYAAN - Education Access"
                android:textColor="@color/gyaan_color"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="AI Scholarship Finder â€¢ 500+ Schemes â€¢ Virtual Mentorship"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <!-- AI Scholarship Matcher -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="ðŸ” AI-Powered Scholarship Matcher"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Search 500+ government and private scholarships"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/category_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@android:drawable/edit_text"
                        android:hint="Category (General/OBC/SC/ST)"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:padding="12dp" />

                    <EditText
                        android:id="@+id/state_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@android:drawable/edit_text"
                        android:hint="State"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:padding="12dp" />

                    <EditText
                        android:id="@+id/course_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@android:drawable/edit_text"
                        android:hint="Course Interested In"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:padding="12dp" />

                    <EditText
                        android:id="@+id/income_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@android:drawable/edit_text"
                        android:hint="Family Income (Annual)"
                        android:inputType="number"
                        android:minHeight="48dp"
                        android:padding="12dp" />

                    <EditText
                        android:id="@+id/percentage_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@android:drawable/edit_text"
                        android:hint="12th Standard Percentage"
                        android:inputType="numberDecimal"
                        android:minHeight="48dp"
                        android:padding="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_find_scholarships"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ” Find My Scholarships"
                        app:backgroundTint="@color/gyaan_color" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Application Assistance -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="ðŸ“ Application Assistance"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="We help you with every step"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_pre_fill_forms"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="ðŸ“„ Pre-Fill Forms"
                        app:backgroundTint="@color/info" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_document_checklist"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="ðŸ“‹ Document Checklist"
                        app:backgroundTint="@color/info" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_deadline_reminders"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="â° Deadline Reminders"
                        app:backgroundTint="@color/warning" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_application_tracking"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š Application Tracking"
                        app:backgroundTint="@color/success" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Career Guidance -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="ðŸŽ¯ Career Guidance"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_virtual_mentorship"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="ðŸ‘©â€ðŸ« Virtual Mentorship"
                        app:backgroundTint="@color/gyaan_color" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_women_leaders_stories"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="â­ Women Leaders Stories"
                        app:backgroundTint="@color/gyaan_color" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_skill_development"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="ðŸ’» Skill Development"
                        app:backgroundTint="@color/gyaan_color" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_online_courses"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="ðŸ“š Browse Courses"
                        app:backgroundTint="@color/accent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_career_guidance"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="ðŸŽ¯ Get Guidance"
                        app:backgroundTint="@color/accent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_skill_assessment"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š Skill Assessment"
                        app:backgroundTint="@color/accent" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
